@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Employees</h1>

@if (@Model.Count == 0)
{
  <h3>No employees have been added yet!</h3>
} 

@foreach (Employee employee in Model)
{
  <li>@Html.ActionLink($"{employee.Name}", "Details", new { id = employee.Id })</li>
}

<p>@Html.ActionLink("Add new employee", "Create")</p>