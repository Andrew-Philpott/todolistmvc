@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model ToDoList.Models.Category;

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if (@Model.Items.Count == 0)
{
  <p>No items added yet.</p>
}
<ol>
@foreach (Item item in @Model.Items)
{
  <li>Title: @item.Title</li>
  <ul>
    <li>Description: @item.Description</li>
    <li>Due Date: @item.Due.ToString()</li>
    <li>Complete?: @item.IsComplete</li>
  </ul>
}
</ol>

@* /categories/{categoryId}/items/new *@
<p>@Html.ActionLink("Add new item", "New", $"categories/{@Model.Id}/items",)</p>
<p>@Html.ActionLink("Back to categories", "Index")</p>
