@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model ToDoList.Models.Category;

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Description)</h3>

@if (@Model.Items.Count == 0)
{
  <p>No items added yet.</p>
}
<ul>
@foreach (Item item in @Model.Items)
{
  <li>Description: @item.Description</li>
}
</ul>

<p>@Html.ActionLink("Add new item", "New")</p>
<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.Id })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.Id })</p>
