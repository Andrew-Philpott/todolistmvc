@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Category>;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

@foreach (Category category in Model)
{
  <li>@Html.ActionLink($"{category.Name}", "Show", new { id = category.Id })</li>
}

<p>@Html.ActionLink("Add new category", "New", "categories")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>